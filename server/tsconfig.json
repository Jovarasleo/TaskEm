{
  "compilerOptions": {
    "target": "es6",
    "module": "ES6",
    "sourceMap": true,
    "outDir": "./build",
    "rootDir": "./",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "type": "module",
  "include": ["./src", "config"]
}
